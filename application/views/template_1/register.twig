<div class="header"></div>
<div class="main">
    <section style="text-align:center;">
        <h1>New User Registration</h1>
        <form id="form-register" method="post" action="{{ base_url }}register.html">
            {% if not isValid %}
                <div class="form-group">
                    <div class="alert alert-danger">
                        {{ formError | raw }}
                    </div>
                </div>
            {% endif %}

            {% if isSuccess %}
                <div class="form-group">
                    <div class="alert alert-success">
                        Successfully registered, you may login now
                    </div>
                </div>
            {% endif %}

            <div class="form-group">
                <input type="text" name="tx_username" class="form-control" placeholder="Enter Username" value="{{ formData['tx_username'] }}" maxlength="40" />
            </div>
            <div class="form-group">
                <input type="email" name="tx_email" class="form-control" placeholder="Your Email" value="{{ formData['tx_email'] }}" maxlength="40" />
            </div>
            <div class="form-group">
                <input type="password" name="tx_password" class="form-control" placeholder="Your Password" maxlength="15" />
            </div>
            <div class="form-group div-agree">
                <label style="font-weight: normal">
                    <input {% if formData['agree'] == 'on' %} checked {% endif %} type="checkbox" name="agree" id="agree"> Agree with the <a href="terms.html">terms & conditions</a> and <a href="disclaimer.html">disclaimer</a>
                </label><br>
                <span class="text-danger error-agree" style="display: none">Please agree to our terms, conditions and disclaimer</span>
            </div>
            <div class="form-group"><hr /></div>
            <button name="submit" value="1" type="submit">Register</button>
            <div class="form-group"><hr /></div>
            <div class="form-group">
                <a style="float: left;" href="{{ base_url }}login.html">Already registered? Log in here...</a>
            </div>
        </form>
    </section>
</div>

<script>
    document.getElementById('id_common').addEventListener('load', function () {
        $(document).ready(function () {
            $("#form-register").submit(function( event ) {
                if ($("#agree").is(':checked')) {

                } else {
                    $('.error-agree').show();
                    event.preventDefault();
                }
            });
        });
    });

</script>